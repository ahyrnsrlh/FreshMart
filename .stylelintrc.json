{
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "layer",
                    "variants",
                    "responsive",
                    "screen"
                ]
            }
        ],
        "property-no-unknown": [
            true,
            {
                "ignoreProperties": ["-webkit-line-clamp", "line-clamp"]
            }
        ],
        "function-no-unknown": [
            true,
            {
                "ignoreFunctions": ["theme"]
            }
        ]
    }
}
